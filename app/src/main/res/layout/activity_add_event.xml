<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center">

        <!-- Changed hardcoded hint "Enter Event Name" to @string/enter_event_name -->
        <!-- Note: EditText shows Lint warnings (e.g., accessibility/attributes).
        Functionality is not affected. -->
        <EditText
            android:id="@+id/etEventName"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/enter_event_name"
            android:maxLength="45"
            android:padding="10dp"
            android:background="@android:color/white"/>

        <!-- Changed hardcoded "Select Event Date" to @string/select_event_date -->
        <!-- Note: EditText shows Lint warnings (e.g., accessibility/attributes).
        Functionality is not affected. -->
        <EditText
            android:id="@+id/etEventDate"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_event_date"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@android:color/white"/>

        <!-- Changed hardcoded "Select Event Time" to @string/select_event_time -->
        <!-- Note: EditText shows Lint warnings (e.g., accessibility/attributes).
        Functionality is not affected. -->
        <EditText
            android:id="@+id/etEventTime"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="@string/select_event_time"
            android:padding="10dp"
            android:focusable="false"
            android:clickable="true"
            android:background="@android:color/white"/>

        <!-- Changed hardcoded "Save Event" to @string/save_event -->
        <Button
            android:id="@+id/btnSaveEvent"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/save_event"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

        <!-- Changed hardcoded "Cancel" to @string/cancel -->
        <Button
            android:id="@+id/btnCancel"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/cancel"
            android:textSize="20sp"
            android:layout_marginTop="10dp"/>

</LinearLayout>