<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">

    <!-- Changed hardcoded "Back to Events" to @string/back_to_events -->
    <Button
        android:id="@+id/btnBackToEvents"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/back_to_events"
        android:textSize="20sp"
        android:padding="8dp"
        android:textStyle="bold"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"/>

    <!-- Changed hardcoded "Event Name" to @string/event_name -->
    <!-- Note: Warning shown for android:textStyle="bold" on EditText. Kept bold for design -->
    <EditText
        android:id="@+id/etEventName"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/event_name"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold"
        android:background="@null"
        android:maxLength="45"
        android:inputType="text"/>

    <!-- Changed hardcoded "Select Date" to @string/date -->
    <!-- Note: Warning shown for android:textStyle="bold" on EditText. Kept bold for design -->
    <EditText
        android:id="@+id/etEventDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/date"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold"
        android:background="@null"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Changed hardcoded "Select Time" to @string/time -->
    <!-- Note: Warning shown for android:textStyle="bold" on EditText. Kept bold for design -->
    <EditText
        android:id="@+id/etEventTime"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="@string/time"
        android:textSize="20sp"
        android:textColor="@android:color/white"
        android:textColorHint="@android:color/white"
        android:textStyle="bold"
        android:background="@null"
        android:focusable="false"
        android:clickable="true"/>

    <!-- Changed hardcoded "Update Event" to @string/update_event -->
    <Button
        android:id="@+id/btnUpdateEvent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/update_event"
        android:textSize="20sp"
        android:padding="2dp"
        android:textStyle="bold"
        android:layout_marginBottom="10dp"/>
</LinearLayout>
