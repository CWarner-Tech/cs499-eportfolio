<?xml version="1.0" encoding="utf-8"?>
<data-extraction-rules>
    <cloud-backup disableIfNoEncryptionCapabilities="true">
        <!-- Exclude sensitive local database file -->
        <exclude domain="database" path="event_tracker.db" />

        <!-- Optionally exclude user preferences if added later -->
        <exclude domain="sharedpref" path="user_prefs.xml" />
    </cloud-backup>

    <device-transfer>
        <!-- Also exclude database when transferring device-to-device -->
        <exclude domain="database" path="event_tracker.db" />
    </device-transfer>
</data-extraction-rules>